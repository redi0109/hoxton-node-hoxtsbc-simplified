// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique
  password    String
  Transaction Transaction[]
}

model Transaction {
  id     Int  @id @default(autoincrement())
  amount Int
  user   User @relation(fields: [userId], references: [id])
  userId Int
}
